@model ProductReview.Models.Review
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-2">
                @Html.LabelFor(x => x.Name)
            </div>
            <div class="col-10">
                @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "text-danger" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-2">
                @Html.LabelFor(x => x.ProductName)
            </div>
            <div class="col-10">
                @Html.EditorFor(x => x.ProductName, new { htmlAttributes = new { @class = "text-danger" } })
                @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-2">
                @Html.LabelFor(x => x.Rate)
            </div>
            <div class="col-10">
                @Html.EditorFor(x => x.Rate, new { htmlAttributes = new { @class = "text-danger" } })
                @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-10">
                <input type="submit" value="Send" class="btn btn-primary"/>
            </div>
        </div>
    </div>

}
